<h1>New Recipe Form</h1>
<%= form_for @recipe, html: {id: 'new_recipe'} do |f|%>

	<%= f.label :name %>
	<%= f.text_area :name, html: {id: 'recipe_name'} %>

	<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |ingredient| %>
		<%= ingredient.check_box %> <%= ingredient.label %>
	<% end %>

	<%= f.submit %>


<% end %>